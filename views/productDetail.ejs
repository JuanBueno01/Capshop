<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title><%= product.nombre %> - CapXhop</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #fafafa;
      margin: 0;
      padding: 0;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 40px;
      background: white;
      border-bottom: 1px solid #ddd;
    }

    .logo {
      width: 70px;
    }

    .nav a {
      margin: 0 12px;
      font-weight: bold;
      text-decoration: none;
      color: black;
    }

    .logout-btn {
      padding: 8px 14px;
      background: #b300ff;
      color: white;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
    }

    .container {
      display: flex;
      width: 90%;
      margin: auto;
      margin-top: 40px;
      gap: 40px;
    }

    /* ===============================
       IMAGEN PRINCIPAL
    =============================== */
    .left {
      flex: 1.2;
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }

    .main-img {
      width: 100%;
      border-radius: 12px;
    }

    .thumbs {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }

    .thumbs img {
      width: 90px;
      height: 90px;
      object-fit: cover;
      border-radius: 10px;
      border: 2px solid #ddd;
      cursor: pointer;
      transition: 0.2s;
    }

    .thumbs img:hover {
      border-color: #b300ff;
    }

    /* ===============================
       INFO DEL PRODUCTO
    =============================== */
    .right {
      flex: 1;
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }

    .price {
      font-size: 24px;
      font-weight: bold;
      color: #b300ff;
    }

    .sizes button {
      padding: 8px 12px;
      margin: 6px;
      border-radius: 6px;
      border: 1px solid #888;
      background: white;
      cursor: pointer;
    }

    .qty {
      display: flex;
      gap: 10px;
      margin: 15px 0;
    }

    .qty button {
      padding: 6px 14px;
      border: none;
      background: #eee;
      cursor: pointer;
      border-radius: 6px;
    }

    .buy-buttons {
      display: flex;
      gap: 20px;
      margin-top: 20px;
    }

    .btn-add {
      flex: 1;
      padding: 12px;
      background: #b300ff;
      color: white;
      border-radius: 10px;
      border: none;
      font-weight: bold;
      cursor: pointer;
    }

    .btn-buy {
      flex: 1;
      padding: 12px;
      background: white;
      border: 2px solid #b300ff;
      border-radius: 10px;
      font-weight: bold;
      cursor: pointer;
      color: #b300ff;
    }

    .desc-box {
      width: 90%;
      margin: 40px auto;
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }
  </style>
</head>

<body>

  <header>
    <img src="/img/perro.jpg" class="logo">
    <div class="nav">
      <a href="/">Inicio</a>
      <a href="/menu">Catálogo</a>
      <a href="/cart">Carrito</a>
    </div>

    <a href="/login" class="logout-btn">Iniciar sesión</a>
  </header>

  <div class="container">

    <!-- IMAGENES -->
    <div class="left">
      <img class="main-img" id="mainImage" src="/img/<%= product.imagen %>">

      <div class="thumbs">
        <img src="/img/<%= product.imagen %>" onclick="changeImg(this)">
        <img src="/img/<%= product.imagen %>" onclick="changeImg(this)">
        <img src="/img/<%= product.imagen %>" onclick="changeImg(this)">
      </div>
    </div>

    <!-- INFO PRODUCTO -->
    <div class="right">
      <h2><%= product.nombre %></h2>
      <p class="price">$<%= product.precio %></p>

      <h4>Tallas</h4>
      <div class="sizes">
        <button>7</button>
        <button>7 1/8</button>
        <button>7 1/4</button>
        <button>7 3/8</button>
        <button>7 1/2</button>
      </div>

      <div class="qty">
        <button>-</button>
        <span>1</span>
        <button>+</button>
      </div>

      <div class="buy-buttons">
        <form action="/add-to-cart" method="POST">
          <input type="hidden" name="id" value="<%= product.id_producto %>">
          <button class="btn-add">Agregar al carrito</button>
        </form>

        <button class="btn-buy">Comprar ahora</button>
      </div>
    </div>

  </div>

  <div class="desc-box">
    <p><%= product.descripcion %></p>
  </div>

  <script>
    function changeImg(el) {
      document.getElementById("mainImage").src = el.src;
    }
  </script>

</body>
</html>
